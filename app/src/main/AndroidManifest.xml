<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.asayah.reservatium">

    <application
        android:name=".Reservatium"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reservatium.Core">
        <activity android:name=".features.core.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.reservation.editor.ReservationEditorActivity" />
        <activity android:name=".features.customer.editor.CustomerEditorActivity" />
        <activity android:name=".features.customer.chooser.CustomerChooserActivity"/>
        <activity android:name=".features.room.chooser.RoomChooserActivity"/>
        <activity android:name=".features.shared.DateRangeChooserActivity" />
    </application>

</manifest>